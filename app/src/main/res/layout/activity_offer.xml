<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Activity.OfferActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="#3f51b5"
                  android:layout_height="48dp">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu_black_24dp"
                android:layout_marginLeft="21dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/navmenu"
        />
        <LinearLayout android:layout_width="235dp"
                      android:layout_marginLeft="6dp"

                      android:layout_gravity="center"
                      android:layout_height="wrap_content"

                      android:orientation="horizontal">


            <android.support.v7.widget.AppCompatEditText android:layout_width="195dp"
                                                         android:id="@+id/editsearch"
                                                         android:textStyle="bold"
                                                         android:hint="Search for items.."

                                                         android:fontFamily="serif"
                                                         android:gravity="center"
                                                         android:textSize="15dp"
                                                         android:layout_gravity="center"
                                                         android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatEditText>


            <android.support.v7.widget.AppCompatImageView android:layout_width="25dp"
                                                          android:layout_gravity="center"
                                                          android:layout_height="match_parent"
                                                          android:id="@+id/searchicon"
                                                          app:srcCompat="@drawable/ic_search_black_24dp"

                                                          tools:ignore="VectorDrawableCompat"/>
        </LinearLayout>
        <!--<android.support.v7.widget.AppCompatImageView-->
        <!--android:layout_width="91dp"-->
        <!--android:layout_height="37dp"-->
        <!--android:background="@drawable/f"-->
        <!--android:scaleType="fitStart"-->
        <!--android:layout_marginLeft="18dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->

        <!--/>-->


        <android.support.v7.widget.AppCompatImageView android:layout_width="26dp"
                                                      android:layout_gravity="center"
                                                      android:id="@+id/btnreward"
                                                      app:srcCompat="@drawable/ic_shopping_cart_black_24dp"
                                                      android:layout_marginLeft="12dp"
                                                      android:layout_height="wrap_content"
                                                      tools:ignore="VectorDrawableCompat"/>

        <android.support.v7.widget.AppCompatImageView android:layout_width="26dp"
                                                      android:layout_gravity="center"
                                                      app:srcCompat="@drawable/ic_notifications_black_24dp"
                                                      android:layout_marginLeft="5dp"
                                                      android:layout_height="30dp"
                                                      android:id="@+id/btnnotif"
                                                      tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>

    <android.support.design.card.MaterialCardView
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="15dp"
            app:cardElevation="2dp"
            android:background="@drawable/sale"
            android:defaultFocusHighlightEnabled="true"
            app:cardCornerRadius="8dp"
            android:layout_width="374dp"
            android:layout_gravity="center"
            android:layout_height="142dp">
        <pl.droidsonroids.gif.GifImageView android:layout_width="wrap_content"
                                           android:background="#fff"
                                           android:layout_gravity="center"
                                           android:src="@drawable/first"
                                           android:layout_height="100dp"/>

    </android.support.design.card.MaterialCardView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"

            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="280dp"
                android:id="@+id/clickitem"


                android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:src="@drawable/fas"/>

            <TextView
                    android:id="@+id/prices"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="price"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/names"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="name"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/amounts"
                    android:layout_width="102dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="amount"

                    android:textStyle="bold" />

            <Button
                    android:id="@+id/btnadd1"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/ic_add_black_24dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:text="add" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/click2"
                android:layout_weight="50"
                android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/jewel"/>

            <TextView
                    android:id="@+id/price2s"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="price"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/name2s"
                    android:layout_gravity="center"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="name"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/amount2s"
                    android:layout_gravity="center"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="amount"
                    android:textStyle="bold"/>

            <Button
                    android:id="@+id/btnadd2"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="25dp"
android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:drawableRight="@drawable/ic_add_black_24dp"
                    android:text="add"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>