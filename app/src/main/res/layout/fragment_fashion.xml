<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Fragments.FashionFrag">


    <android.support.design.card.MaterialCardView

            android:layout_marginTop="8dp"
            app:cardElevation="2dp"

            android:defaultFocusHighlightEnabled="true"
            app:cardCornerRadius="8dp"
            android:layout_width="285dp"
            android:layout_gravity="center"
            android:layout_height="268dp">

        <LinearLayout android:layout_width="285dp"
                      android:orientation="vertical"
                      android:id="@+id/itema"

                      android:layout_height="255dp">

            <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    app:srcCompat="@drawable/kb"

            />
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="220dp"
                    android:text="DESIGNER KURTI"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:fontFamily="serif-monospace"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"/>
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="220dp"
                    android:text=" ❤FASHION"

                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#78909c"
                    android:layout_height="22dp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="37dp">

                <android.support.v7.widget.AppCompatImageView android:layout_width="39dp"
                                                              android:layout_gravity="center"
                                                              android:src="@drawable/bestprice"
                                                              android:scaleType="fitXY"
                                                              android:clickable="true"
                                                              android:layout_height="25dp"/>

                <android.support.v7.widget.AppCompatTextView android:layout_width="42dp"
                                                             android:text=" 99"
                                                             android:layout_gravity="center"
                                                             android:gravity="center"
                                                             android:textColor="#090109"
                                                             android:textStyle="bold"
                                                             android:layout_height="24dp"/>

                <pl.droidsonroids.gif.GifImageView
                        android:src="@drawable/addcart"
                        android:layout_width="156dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/clickadd1"
                        android:layout_height="30dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView

            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            android:id="@+id/itemb"
            android:defaultFocusHighlightEnabled="true"
            app:cardCornerRadius="8dp"
            android:layout_width="285dp"
            android:layout_gravity="center"
            android:layout_height="265dp">

        <LinearLayout android:layout_width="285dp"
                      android:orientation="vertical"

                      android:layout_height="260dp">
            <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"

                    app:srcCompat="@drawable/fashion"

            />
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="220dp"
                    android:text="M-Biz Designer Kurti"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:fontFamily="serif-monospace"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"/>
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="220dp"
                    android:text=" ❤FASHION"

                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#78909c"
                    android:layout_height="24dp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="37dp">

                <android.support.v7.widget.AppCompatImageView android:layout_width="45dp"
                                                              android:layout_gravity="center"
                                                              android:src="@drawable/bestprice"
                                                              android:scaleType="fitXY"
                                                              android:clickable="true"
                                                              android:layout_height="25dp"/>

                <android.support.v7.widget.AppCompatTextView android:layout_width="38dp"
                                                             android:text=" 199"

                                                             android:layout_gravity="center" android:textColor="#090109"
                                                             android:gravity="center"
                                                             android:textStyle="bold"
                                                             android:layout_height="24dp"/>

                <pl.droidsonroids.gif.GifImageView
                        android:src="@drawable/addcart"
                        android:layout_width="154dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:layout_marginLeft="50dp"
                        android:id="@+id/clickadd2"
                        android:layout_height="35dp"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.design.card.MaterialCardView>


</LinearLayout>
</ScrollView>