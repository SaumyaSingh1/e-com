<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.ShowallActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="#3f51b5"
                  android:layout_height="48dp">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu_black_24dp"
                android:layout_marginLeft="21dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/navmenu"
        />
        <LinearLayout android:layout_width="235dp"
                      android:layout_marginLeft="6dp"

                      android:layout_gravity="center"
                      android:layout_height="wrap_content"

                      android:orientation="horizontal">


            <android.support.v7.widget.AppCompatEditText android:layout_width="195dp"
                                                         android:id="@+id/editsearch"
                                                         android:textStyle="bold"
                                                         android:hint="Search for items.."
                                                         android:fontFamily="serif"
                                                         android:gravity="center"
                                                         android:textSize="12dp"
                                                         android:layout_gravity="center"
                                                         android:layout_height="wrap_content">

            </android.support.v7.widget.AppCompatEditText>


            <android.support.v7.widget.AppCompatImageView android:layout_width="25dp"
                                                          android:layout_gravity="center"
                                                          android:layout_height="match_parent"
                                                          android:id="@+id/searchicon"
                                                          app:srcCompat="@drawable/ic_search_black_24dp"

                                                          tools:ignore="VectorDrawableCompat"/>
        </LinearLayout>
        <!--<android.support.v7.widget.AppCompatImageView-->
        <!--android:layout_width="91dp"-->
        <!--android:layout_height="37dp"-->
        <!--android:background="@drawable/f"-->
        <!--android:scaleType="fitStart"-->
        <!--android:layout_marginLeft="18dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->

        <!--/>-->


        <android.support.v7.widget.AppCompatImageView android:layout_width="26dp"
                                                      android:layout_gravity="center"
                                                      android:id="@+id/btnreward"
                                                      app:srcCompat="@drawable/ic_shopping_cart_black_24dp"
                                                      android:layout_marginLeft="12dp"
                                                      android:layout_height="wrap_content"
                                                      tools:ignore="VectorDrawableCompat"/>

        <android.support.v7.widget.AppCompatImageView android:layout_width="26dp"
                                                      android:layout_gravity="center"
                                                      app:srcCompat="@drawable/ic_notifications_black_24dp"
                                                      android:layout_marginLeft="5dp"
                                                      android:layout_height="30dp"
                                                      android:id="@+id/btnnotif"
                                                      tools:ignore="VectorDrawableCompat"/>

    </LinearLayout>
    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/tab"
            android:background="#757de8"
            android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/viewpager"
                                       android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>